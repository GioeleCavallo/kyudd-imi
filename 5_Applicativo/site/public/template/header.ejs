<meta charset="UTF-8">
<% if(typeof title != "undefined" && title) { %>
    <title><%= title %></title>
<% } else { %>
    <title> Progetto Kyudd-imi </title>
<% }%>
<!-- CSS (load bootstrap from a CDN) -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
<style>
    #data-table {
        font-family: Arial, Helvetica, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }
    #main canvas{
        border-radius: 50px; 
        
    }
    label:has(#checkBox){
        margin-left: 1%;
        padding: 16px;
    }
    #data-table td,
    #data-table th {
        border: 1px solid white;
        padding: 8px;
    }

    #data-table tr:nth-child(even) {
        background-color: #4ECDC4;
    }

    #data-table tr:hover {
        background-color: #ddd;
    }

    #data-table th {
        padding-top: 12px;
        padding-bottom: 12px;
        text-align: left;
        background-color: #292F36;
        color: white;
    }

    
    .navbar-custom {
        background-color: red;
    }
    .title-color{
        font-weight: bold;
        color: #4ECDC4;
    }
    #title{        
        text-align: center;
    }
    #data-table{
        width: 100%;
    }
    hr.big-line{
        
        border: 5px solid #4ECDC4;
    }

    hr.normal-line{
        
        border: 2px solid #4ECDC4;
    }

    h1#subtitle{
        font-weight: bold;
        color: #4ECDC4;
        
        text-align: right;
        padding-right: 10%;

    }

    #project-name{
        color: #FF6B6B;
        font-size: 25px;
        font-weight: bold;
        margin-left: 1%;
    }

    #nav-bar-content{
        margin-right: 3%;
    }

    #data-table_wrapper{
        width:95%;
        margin: auto;
    }

    .center{
        margin: auto;
        width: 50%;
        padding: 10px;

    }

    input{
            margin-top: 10px;
            margin-bottom: 10px;
    }
    .a-text{
        font-size: 20px;
    }

    .input-text{
        
        border-radius: 20px; 
        border: 3px solid #4ECDC4;
        padding: 5px;
    }
    .input-text:focus{
        
        outline:0;
    }

    .button-form{
        
        border-radius: 90px; 
        border: 3px solid #4ECDC4;
        padding: 4px;
        background-color: #4ECDC4;
        color: white;
    }
    
    #footer-text{
        color: #4ECDC4;
        font-size: 20px;
        font-weight: bold;
        padding-left: 1%;
        padding-top: 1%;
    }


    body{
        height: 100%;
        margin: 0;
        overflow: hidden;

    }
    .content {
        height: 100vh;
        width: 100vw;
        width: 100%;
        height: 100%;

    }
    footer{
        background-color: #f8f9fa;
        height: 60px;
        margin-top: -60px
    }

</style>

<body>
<div class="content">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
        integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
        integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
        integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
        crossorigin="anonymous"></script>

        
    <script src="/scripts/data-table.js"></script>
        <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.css" />
  
        <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.js"></script>


    <script src="https://code.jquery.com/jquery-3.6.4.min.js"
        integrity="sha256-oP6HI9z1XaZNBrJURtCoUT5SUnxFr8s3BzRl+cbzUq8=" crossorigin="anonymous"></script>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light navbar-custom">
            <a class="navbar-brand" href="/" id="project-name">Progetto Kyudd-imi</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav form-inline my-2 my-lg-0 ms-auto" id="nav-bar-content">
                    <li class="nav-item active">
                        <a class="nav-link a-text" href="/windowsPage">Finestre</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link a-text" href="/classroomsPage">Classi</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link a-text" href="/3DPage">3D</a>
                    </li>
                    <% if(typeof username != "undefined" && username) { %>
                        <li class="nav-item">
                            <a class="nav-link a-text" href="/logout">logout</a>
                        </li>
                    <% } else{ %>
                        <li class="nav-item">
                            <a class="nav-link a-text" href="/login">login</a>
                        </li>
                    <% } %>
                </ul>
            </div>
        </nav>
    </header>
    <% if(typeof info != "undefined" && info) { %>
        <div class="alert alert-info" role="alert">
            <%= info %>
        </div>
    <% } %>
    <% if(typeof error != "undefined" && error) { %>
    <div class="alert alert-danger" role="alert">
        <%= error %>
    </div>
    <% } %>